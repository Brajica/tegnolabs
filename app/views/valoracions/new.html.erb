<%= form_for @valoracion, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
  <% if @valoracion.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @valoracion.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.text_field :nombre %>
  <%= f.submit "Create" %>
<% end %>
