<p id="notice"><%= notice %></p>


<div class="container">
 <ol class="breadcrumb">
   <li><a href="<%= root_path%>">Inicio</a></li>
 </ol>

 <div class="col-md-3" style="border-right: 1px dotted #e0e0e0; border-width: thin; margin-bottom: 10px;">
   <div class="panel panel-default">
     <div class="panel-heading"><h4 class="text-muted" style="font-weight: bold;">Filtro</h4></div>
     <div class="panel-body">
       <div class="input-group">
       <input type="text" class="form-control" placeholder="Escribe algo para buscar..." autofocus >
         <div class="input-group-btn"><button class="btn btn-default" data-toggle="tooltip" data-placement="right" title="Buscar"><i class="fa fa-search"></i></button></div>
       </div><hr>
       <div class="form-group">
         <label for="txtPlataforma" class="control-label">Plataforma</label>
         <select name="txtPlataforma" id="" class="form-control">
           <option value="">--- Seleccione ---</option>
           <option value="">Web</option>
           <option value="">Escritorio</option>
           <option value="">Móvil</option>
         </select>
       </div><hr>
       <div class="form-group">
         <label for="txtNivel" class="control-label">Nivel</label>
         <select name="txtNivel" class="form-control">
           <option value="">--- Seleccione ---</option>
           <option value="">Escolar</option>
           <option value="">Universitario</option>
         </select>
       </div><hr>
       <div class="form-group">
         <label for="txtCategoria" class="control-label">Categoría</label>
         <select name="txtCategoria" id="" class="form-control">
           <option value="">--- Seleccione ---</option>
         </select>
       </div><hr>
       <div class="form-group">
         <label for="txtCompetencias" class="control-label">Competencias</label>
         <select name="txtCompetencias" id="" class="form-control">
           <option value="">--- Seleccione ---</option>
         </select>
       </div>
     </div>
   </div>
 </div>

 <div class="col-md-9">
   <div class="panel panel-default">
     <div class="panel-body">
       <h1 class="text-muted">Aplicaciones</h1><hr>
     </div>
     <table class="table table-hover" style="text-align: center;">
       <thead style="font-weight:bold;">
         <tr style="background:#f5f5f5; font-size:15px;">

           <td>Nombre</td>
           <td>Descripcion</td>
           <td>Valoración</td>
           <td></td>
         </tr>
       </thead>
       <tbody>
         <% @apps.each do |app| %>
           <tr>
             <td><%= app.titulo %></td>
             <td><%= truncate(app.cuerpo, :length => 20) %></td>
             <td><%= app.calificacion %></td>
           </tr>
         <% end %>
       </tbody>
     </table>
   </div>
 </div>
</div>

<%= link_to 'New App', new_app_path %>
