<p id="notice"><%= notice %></p>
<div class="container">
 <ol class="breadcrumb">
   <li><a href="<%= root_path%>">Inicio</a></li>
 </ol>

 <div class="col-md-3" style="border-right: 1px dotted #e0e0e0; border-width: thin; margin-bottom: 10px;">
   <div class="panel panel-default">
     <div class="panel-heading"><h4 class="text-muted" style="font-weight: bold;">Filtro</h4></div>
     <div class="panel-body">
       <hr>
       <%= form_tag({:controller => "apps", :action => "filtros", :remote => true}, :method => "post") do %>
       <div class="form-group">
         <label for="txtCategoria" class="control-label">Rol</label>
         <select name="rol" id="" class="form-control">
           <option value="">--- Seleccione ---</option>
            <option value="estudiante">Estudiante</option>
             <option value="profesor">Profesor</option>
         </select>
       </div><hr>
       <div class="form-group">
         <label for="txtPlataforma" class="control-label">Plataforma</label>
         <select name="plataforma" id="" class="form-control">
           <option value="">--- Seleccione ---</option>
           <option value="web">Web</option>
           <option value="escritorio">Escritorio</option>
           <option value="movil">Móvil</option>
         </select>
       </div><hr>
       <div class="form-group">
         <label for="txtCompetencias" class="control-label">Area</label>
         <select name="area" id="" class="form-control">
           <option value="">--- Seleccione ---</option>
         </select>
       </div>
       <div class="form-group">
         <center><input type="submit"  value="Filtrar" class="btn btn-info"></center>
       </div>
       <% end %>
     </div>

     <% @apps.each do |app| %>
      <%= link_to app.rol %>
     <%end%>
   </div>
 </div>
 <div class="col-md-9">
   <div class="panel panel-default">
     <div class="panel-body">
       <h1 class="text-muted">Aplicaciones</h1><hr>
     </div>
     <table class="table table-hover" style="text-align: center;">
       <thead style="font-weight:bold;">
         <tr style="background:#f5f5f5; font-size:15px;">
           <td>Nombre</td>
           <td>Descripcion</td>
           <td></td>
         </tr>
       </thead>
       <tbody>
         <% @apps.each do |app| %>
         <tr onclick="document.location='apps/<%= app.id %>'" style="cursor:pointer">
             <td><%= app.titulo %></td>
             <td><%= truncate(app.cuerpo, :length => 20) %></td>
             <td>
               <%= form_tag({:controller => "ratings", :action => "new"}, :method => "get") do %>
               <%= hidden_field_tag :value, app.id%>
               <%= submit_tag  app.titulo, id: app.titulo,class:"roles"%>
               <label for="<%= app.titulo%>"><a type="button" title="Valorar aplicación" class="btn btn-primary" data-toggle="tooltip" data-placement="top" ><i class="fa fa-check"></i></a></label>
              <% end %>
             </td>

         </tr>
         <% end %>
       </tbody>
     </table>
   </div>
 </div>
</div>
